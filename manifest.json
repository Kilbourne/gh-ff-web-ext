{
    "manifest_version": 2,
    "name": "Github link filter",
    "version": "1.2",
    "description": "Github link filter",
    "icons": {
        "48": "icons/github-48.png"
    },
    "content_scripts": [{
        "matches": ["*://github.com/search*"],
        "js": ["gh.js"]
    }],
    "browser_action": {

        "default_icon": {
            "16": "icons/github-16.png"
        },
        "default_title": "Github link filter"

    },
    "permissions": [
        "bookmarks",
        "tabs",
        "webRequest"
    ],

    "background": {
        "scripts": ["background.js"]
    }
}
